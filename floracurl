window.srn = {};
window.srn.datastore = {};
window.srn.datastore.installed = true;

if (window.Shopify && window.Shopify.shop) {
  window.srn.datastore.shopify_domain = window.Shopify.shop
} else {
  console.error('SRN: unable to get shop domain')
  window.srn.datastore.shopify_domain = ''
}

if (window.srn.datastore.shopify_domain.indexOf('srn-chris') > -1) {
  window.srn.datastore.server_url = 'https://dev.propelcommerce.io'
} else if (window.srn.datastore.shopify_domain.indexOf('srn-eric') > -1) {
  window.srn.datastore.server_url = 'https://pc5.ngrok.io'
} else if (window.srn.datastore.shopify_domain.indexOf('srn-teej') > -1) {
  window.srn.datastore.server_url = 'https://pc2.ngrok.io'
} else if (window.srn.datastore.shopify_domain.indexOf('srn-staging') > -1) {
  window.srn.datastore.server_url = 'https://session-recording-now-staging.herokuapp.com'
} else {
  window.srn.datastore.server_url = 'https://session-recording-now.herokuapp.com'
}

function loadJS(url, async = true) {
  let scriptEle = document.createElement("script");

  scriptEle.setAttribute("src", url);
  scriptEle.setAttribute("type", "text/javascript");
  scriptEle.setAttribute("async", async);

  document.body.appendChild(scriptEle);
}
loadJS(window.srn.datastore.server_url + "/session-recording-now.js", true);
</script>


